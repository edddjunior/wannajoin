<section class="bg-banner">
  <div class="container-fluid pl-5 pr-5">
    <div class="row">
      <div class="col-lg-4">
        some kind of filter here
      </div>

      <div id="wrap-counter" class="col-lg-4">
        <div class="row justify-content-center">
          <div class="number-circle"><%= event_counter %></div>
          <h1 class="ml-3 mt-4">Around <br>you!</h1>
        </div>
      </div>

      <div class="col-lg-4" id="new-event">
        <h1><%= link_to 'Create an Event!', new_event_path, :class =>"btn btn-rounded btn-create" %></h1>
      </div>
    </div>

    <div id="wrap-events">
      <h2>All</h2>

      <div class="row">
        <% @events.each do |event| %>
          <div class="col-lg-6">
            <%= link_to event_path(event) do %>
              <div class="card mt-3 btn btn-lg btn-outline-light text-dark">
                <div class="row">
                  <div class="col-lg-3">
                    <% if event.image.attached? %>
                    <%= image_tag(event.image, :alt => "event image", :size=> '120x120', :class => "img-circle") %>
                    <% else %>
                    <% end %>
                  </div>
                  <div class="col-lg-9">
                    <h5 class="card-title"><strong><%= truncate(event.name) %></strong></h5>
                    <h6><leader class="text-muted"><%= truncate(event.created_at.to_s[0...-4]) %></leader></h6>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
