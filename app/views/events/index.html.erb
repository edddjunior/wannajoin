<section class="bg-banner">

<section class="content">

  <div class="container-fluid">

    <div class="row justify-content-center">

      <div class="col-lg-4">
        some kind of filter here
      </div>

      <div class="col-lg-4">
        <div class="row justify-content-center">
          <div class="number-circle "><%= event_counter %></div>
          <h1 class="ml-3 mt-4">Around <br>you!</h1>
        </div>
      </div>

      <div class="col-lg-4">
        <h1><%= link_to 'Create an Event!', new_event_path, :class =>"btn btn-rounded btn-create" %></h1>
      </div>

    </div>



    <div class="row">
      <div class="col-lg-12">
        <p id="notice"><%= notice %></p>

        <h1>Events</h1>

        <table>
          <thead>
            <tr>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @events.each do |event| %>
              <tr>
                <td><%= link_to 'Show', event %></td>
                <td><%= link_to 'Edit', edit_event_path(event) %></td>
                <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Event', new_event_path %>
      </div>
    </div>




      </div>

</section>

</section>
