<!DOCTYPE html>
<html>
  <head>
    <title>Wannajoin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['GOOGLEMAPS_API_TOKEN']%>&libraries=places"></script>
  </head>
  <body class="<%= controller_name %>">

    <% if controller_name == 'events' %>
      <%= render partial: "layouts/header" %>
    <% end %>

    <div class="main-content">
      <%= show_header %>
      <%= yield %>
    </div>

    <% if controller_name =! 'sessions' %>
      <%= render partial: "layouts/footer" %>
    <% end %>
  </body>
</html>
